<aura:component >
	<aura:attribute name="input1" type="integer"  description="First Input" />
    <aura:attribute name="input2" type="integer"  description="Second Input" />
    
    
    <lightning:input type="number" value="{!v.input1}" label="Enter First number" required="true" />
    <lightning:input type="number" value="{!v.input2}" label="Enter Second number" required="true" />
    
     <lightning:button value="Component Methods" label="Addition" onclick="{! c.doAdd }"/>
     <lightning:button value="Component Methods" label="Subtraction" onclick="{! c.doSub }"/>
     <lightning:button value="Component Methods" label="Multi" onclick="{! c.doMul }"/>
     <lightning:button value="Component Methods" label="Divide" onclick="{! c.doDiv }"/>
</aura:component>